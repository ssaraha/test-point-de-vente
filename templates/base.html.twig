    <body>
        {{ include('layouts/partials/flash_message.html.twig')}}
        {{ include('layouts/partials/nav.html.twig')}}
        <main class="container" role="main">
            {% block body %}   
            {% endblock %}
        </main>
        {% block footer %}
            {{ include('layouts/partials/footer.html.twig')}}
        {% endblock %}
            
        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </body>
</html>
