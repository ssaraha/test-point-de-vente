<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <style type="text/css">
            .alert{
                padding: 10px;
                color: #fff;
                text-align: center;
            }
            .alert-success {
                background-color: green;
            }

            .alert-error {
                background-color: red;
            }
            .alert-info {
                background-color: orange;
            }
        </style>
        {# Run `composer require symfony/webpack-encore-bundle`
           and uncomment the following Encore helpers to start using Symfony UX #}
        {% block stylesheets %}
            {#{{ encore_entry_link_tags('app') }}#}
        {% endblock %}

        {% block javascripts %}
            {#{{ encore_entry_script_tags('app') }}#}
        {% endblock %}
    </head>
    <body>
        {{ include('layouts/partials/flash_message.html.twig')}}
        <nav>
            <ul>
                <li><a href="{{ path('app_pointofsale_index') }}">Home</a></li>
                <li><a href="{{ path('app_pointofsale_create') }}">Nouveau point de vente</a></li>
            </ul>
        </nav>
        {% block body %}   
        {% endblock %}
    </body>
</html>
